  <style>
    :root {
      --color-forest: #2c4a3e;
      --color-moss: #4a6d5c;
      --color-sage: #7d9b8a;
      --color-fern: #9bb5a5;
      --color-mist: #d4e4db;
      --color-cream: #faf9f7;
      --color-warm-white: #fffffe;
      --color-bark: #5c4d3c;
      --color-stone: #6b6b6b;
      --color-text: #3a3a3a;
      --color-text-soft: #666666;
      --font-display: 'Playfair Display', Georgia, serif;
      --font-body: 'Source Sans 3', -apple-system, BlinkMacSystemFont, sans-serif;
      --font-accent: 'Cormorant', Georgia, serif;
    }
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html { scroll-behavior: smooth; }
    body {
      font-family: var(--font-body);
      font-size: 17px;
      line-height: 1.7;
      color: var(--color-text);
      background: var(--color-cream);
      -webkit-font-smoothing: antialiased;
    }
    .container { max-width: 900px; margin: 0 auto; padding: 0 2rem; }

    /* Main Navigation - matches base.njk */
    nav {
      background: var(--color-warm-white);
      padding: 1.25rem 2rem;
      border-bottom: 1px solid var(--color-mist);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    nav ul {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem 3rem;
      list-style: none;
      max-width: 900px;
      margin: 0 auto;
    }
    nav > ul > li {
      position: relative;
    }
    nav a {
      font-family: var(--font-body);
      font-size: 0.85rem;
      font-weight: 500;
      color: var(--color-stone);
      text-decoration: none;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      padding: 0.25rem 0;
      position: relative;
      transition: color 0.3s ease;
    }
    nav a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 1px;
      background: var(--color-moss);
      transition: width 0.3s ease;
    }
    nav a:hover { color: var(--color-forest); }
    nav a:hover::after { width: 100%; }

    /* Dropdown Menu */
    .dropdown {
      position: relative;
    }
    .dropdown-menu {
      position: absolute;
      top: 100%;
      left: 50%;
      transform: translateX(-50%);
      background: var(--color-warm-white);
      border: 1px solid var(--color-mist);
      border-radius: 4px;
      box-shadow: 0 4px 12px rgba(44, 74, 62, 0.1);
      padding: 0.5rem 0;
      min-width: 200px;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.2s ease, visibility 0.2s ease;
      z-index: 200;
      margin-top: 0.5rem;
    }
    .dropdown:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
    }
    .dropdown-menu li {
      list-style: none;
      margin: 0;
    }
    .dropdown-menu a {
      display: block;
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
      letter-spacing: 0.08em;
      text-transform: none;
      white-space: nowrap;
    }
    .dropdown-menu a::after {
      display: none;
    }
    .dropdown-menu a:hover {
      background: var(--color-mist);
    }

    /* Page Header - matches base.njk */
    header.page-header {
      background: linear-gradient(165deg, var(--color-forest) 0%, var(--color-moss) 60%, var(--color-sage) 100%);
      padding: 4rem 2rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    header.page-header::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background:
        radial-gradient(ellipse at 20% 80%, rgba(255,255,255,0.08) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 20%, rgba(255,255,255,0.05) 0%, transparent 40%);
      pointer-events: none;
    }
    header.page-header h1 {
      font-family: var(--font-display);
      font-size: clamp(2rem, 5vw, 2.75rem);
      font-weight: 500;
      color: var(--color-warm-white);
      letter-spacing: -0.01em;
      margin-bottom: 0.5rem;
      position: relative;
      z-index: 1;
      border-bottom: none;
      padding-bottom: 0;
      display: block;
    }
    header.page-header p {
      font-family: var(--font-accent);
      font-size: 1.15rem;
      color: var(--color-mist);
      font-style: italic;
      letter-spacing: 0.02em;
      position: relative;
      z-index: 1;
    }

    /* CV Sub-navigation */
    nav.cv-nav {
      background: var(--color-cream);
      border-bottom: 1px solid var(--color-mist);
      padding: 1rem 2rem;
      position: sticky;
      top: 58px;
      z-index: 99;
    }
    nav.cv-nav ul { gap: 0.25rem 1.5rem; }
    nav.cv-nav a {
      font-size: 0.75rem;
      color: var(--color-sage);
      letter-spacing: 0.08em;
    }
    nav.cv-nav a:hover { color: var(--color-forest); }

    main {
      background: var(--color-warm-white);
      box-shadow: 0 2px 30px rgba(44, 74, 62, 0.06);
      border-radius: 0 0 4px 4px;
      margin-bottom: 2rem;
    }
    section {
      padding: 2.5rem 3rem;
      border-bottom: 1px solid var(--color-mist);
      scroll-margin-top: 130px;
    }
    section:last-child { border-bottom: none; }

    /* Section headings (h1 within content) */
    main h1 {
      font-family: var(--font-display);
      font-size: 1.6rem;
      font-weight: 500;
      color: var(--color-forest);
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
      border-bottom: 2px solid var(--color-sage);
      display: inline-block;
    }
    h2 {
      font-family: var(--font-display);
      font-size: 1.2rem;
      font-weight: 500;
      color: var(--color-moss);
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      line-height: 1.4;
    }
    section > h2:first-child, main h1 + h2 { margin-top: 0; }
    h3 {
      font-family: var(--font-accent);
      font-size: 1rem;
      font-weight: 500;
      color: var(--color-sage);
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
      font-style: italic;
    }
    p { margin-bottom: 1rem; font-weight: 300; }
    ul, ol { margin-bottom: 1rem; padding-left: 1.5rem; }
    li { margin-bottom: 0.4rem; font-weight: 300; }
    li::marker { color: var(--color-sage); }
    a {
      color: var(--color-moss);
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: all 0.2s ease;
    }
    a:hover {
      color: var(--color-forest);
      border-bottom-color: var(--color-sage);
    }
    strong { font-weight: 500; color: var(--color-forest); }
    em { color: var(--color-text-soft); font-style: italic; }
    footer {
      text-align: center;
      padding: 2.5rem 2rem;
      color: var(--color-stone);
      font-size: 0.85rem;
      font-family: var(--font-accent);
      font-style: italic;
      background: var(--color-cream);
    }
    @media (max-width: 768px) {
      header.page-header { padding: 3rem 1.5rem; }
      header.page-header h1 { font-size: 1.75rem; }
      nav ul { gap: 0.25rem 1.5rem; }
      nav a { font-size: 0.75rem; }
      nav.cv-nav { padding: 0.75rem 1rem; top: 45px; }
      nav.cv-nav a { font-size: 0.65rem; }
      section { padding: 2rem 1.5rem; scroll-margin-top: 100px; }
      main h1 { font-size: 1.4rem; }
      body { font-size: 16px; }
    }
    @media print {
      nav, nav.cv-nav, footer { display: none !important; }
      :root {
        --color-forest: #1a3c34;
        --color-moss: #2d5a4a;
        --color-text: #000;
        --color-text-soft: #333;
      }
      body {
        background: white;
        font-size: 9.5pt;
        line-height: 1.35;
        color: #000;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
      .container { max-width: 100%; padding: 0; }
      main { box-shadow: none; border-radius: 0; margin-bottom: 0; }
      header.page-header {
        background: none !important;
        color: var(--color-forest);
        padding: 0 !important;
        margin: 0 0 0.2cm 0 !important;
        border-bottom: 1pt solid var(--color-forest);
        break-after: avoid !important;
        break-inside: avoid !important;
        page-break-after: avoid !important;
        page-break-inside: avoid !important;
      }
      header.page-header::before { display: none; }
      header.page-header h1 {
        font-size: 14pt;
        margin: 0 !important;
        padding: 0 !important;
        color: var(--color-forest);
        display: inline;
      }
      header.page-header p {
        font-size: 10pt;
        color: #444;
        font-style: normal;
        margin: 0 0 0.1cm 0 !important;
        display: block;
      }
      section { padding: 0.2cm 0; border-bottom: 0.5pt solid #ddd; }
      section:first-of-type { padding-top: 0; }
      section:last-child { border-bottom: none; }
      main h1 { font-size: 11pt; color: var(--color-forest); margin-bottom: 0.2cm; padding-bottom: 0.08cm; border-bottom: 1pt solid var(--color-forest); }
      h2 { font-size: 9.5pt; color: #000; margin-top: 0.2cm; margin-bottom: 0.08cm; }
      h3 { font-size: 8.5pt; color: #333; margin-top: 0.15cm; margin-bottom: 0.08cm; font-style: normal; }
      p, li { font-size: 8.5pt; margin-bottom: 0.05cm; font-weight: 400; }
      ul, ol { margin-bottom: 0.1cm; padding-left: 0.35cm; }
      li { margin-bottom: 0.02cm; }
      li::marker { color: #333; }
      a { color: #000; border-bottom: none; }
      a[href^="http"]::after { content: " (" attr(href) ")"; font-size: 7pt; color: #666; word-break: break-all; }
      a[href^="https://doi.org"]::after { content: none; }
      strong { color: #000; font-weight: 600; }
      em { color: #333; }
      main h1, h2, h3 { break-after: avoid-page; }
      section { break-inside: avoid; }
      p { orphans: 3; widows: 3; }
      @page { margin: 1.2cm 1.2cm 1.2cm 1.2cm; size: letter; }
      @page :first { margin-top: 1cm; }
    }
  </style>
</head>
